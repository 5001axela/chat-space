
.leftcontents__set
  .leftcontents__set__nickname
    = current_user.name
  %ul.leftcontents__set__edit-cog
    %li.list
      =link_to new_group_path do
        = fa_icon 'edit', class: 'icon'
    %li.list
      =link_to edit_user_path(current_user) do
        = fa_icon 'cog', class: 'icon'
.leftcontents__group
  .leftcontents__group__set
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .leftcontents__group__set__name
          = group.name
        .leftcontents__group__set__coment
          = group.show_last_message
