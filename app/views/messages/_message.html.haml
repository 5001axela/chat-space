.rightcontents__main__set
  .rightcontents__main__set__name
    = message.user.name
  .rightcontents__main__set__time
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.rightcontents__main__coment
  - if message.content.present?
    %p.rightcontents__main__coment
      = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?