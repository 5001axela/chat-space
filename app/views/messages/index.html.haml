.contents
  .leftcontents
    = render "sideber"
  .rightcontents
    .rightcontents__top
      .rightcontents__top__left
        .rightcontents__top__left__group
          = @group.name
        .rightcontents__top__left__name
          Member:
          = @user_name.join(' , ')
      .rightcontents__top__right
        =link_to edit_group_path(@group) do
          .rightcontents__top__right__edit
            Edit

    .rightcontents__main
      = render @messages

    .rightcontents__bottom
      = form_for [@group, @message] do |f|
        .new_message__text
          = f.text_field :content, class: 'input-form',placeholder: 'type a message'
          .new_message__text__image
            = f.label :image do
              = fa_icon "image"
              =f.file_field :image
        = f.submit 'Send', class: 'new_message__send'

      